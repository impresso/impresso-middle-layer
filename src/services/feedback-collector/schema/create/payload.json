{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/impresso/impresso-middle-layer/tree/master/src/services/feedback-collector/schema/create/payload.json",
  "description": "Request payload for POST /feedback-collector (create method)",
  "type": "object",
  "properties": {
    "errorMessages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "id of the error message"
          },
          "name": {
            "type": "string",
            "description": "name of the error message"
          },
          "message": {
            "type": "string",
            "description": "error message"
          }
        }
      },
      "description": "error messages",
      "minItems": 0
    },
    "issue": {
      "type": "string",
      "description": "type of issue",
      "enum": [
        "ContentItemMetadataIssue",
        "ContentItemFacsimileIssue",
        "ContentItemTranscriptionIssue",
        "LayoutSegmentationIssue",
        "DocumentLoadingIssue",
        "OtherIssue"
      ],
      "default": "FeedbackOptionOtherIssue"
    },
    "content": {
      "type": "string",
      "description": "content of the feedback",
      "maxLength": 1000,
      "pattern": "^(?!.*<\\/?[\\p{L}\\p{M}]+).*"
    },
    "route": {
      "type": "object",
      "description": "route params related to the feedback",
      "properties": {
        "fullPath": {
          "type": "string",
          "description": "full path of the route"
        },
        "params": {
          "type": "object",
          "description": "route parameters"
        },
        "query": {
          "type": "object",
          "description": "query parameters"
        },
        "name": {
          "type": "string",
          "description": "name of the route"
        }
      },
      "required": ["fullPath", "params", "query", "name"],
      "additionalProperties": false
    }
  },
  "required": ["issue", "route"],
  "additionalProperties": false
}
