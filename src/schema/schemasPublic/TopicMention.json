{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Topic Mention",
  "description": "Topic presence in a content item.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "uid": {
      "type": "string",
      "description": "Unique identifier of the topic."
    },
    "relevance": {
      "type": "number",
      "description": "Relevance of the topic in the content item.",
      "minimum": 0,
      "maximum": 1
    }
  },
  "required": ["uid"]
}
