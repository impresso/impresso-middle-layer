{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/impresso/impresso-middle-layer/tree/master/src/schema/collectable-items/CollectableItemGroup.json",
  "description": "Collectable item group object",
  "title": "CollectableItemGroup",
  "type": "object",
  "properties": {
    "itemId": {
      "type": "string",
      "description": "The id of the collectable item group"
    },
    "contentType": {
      "type": "string",
      "enum": ["A", "E", "P", "I"],
      "description": "Content type of the collectable item group: (A)rticle, (E)ntities, (P)ages, (I)ssues"
    },
    "collectionIds": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Ids of the collections"
    },
    "searchQueries": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Search queries"
    },
    "collections": {
      "type": "array",
      "items": {
        "$ref": "https://github.com/impresso/impresso-middle-layer/tree/master/src/schema/models/collection.model.json"
      },
      "description": "Collection objects"
    },
    "latestDateAdded": {
      "type": "string",
      "format": "date-time",
      "description": "The latest date added to the collectable item group"
    }
  }
}
