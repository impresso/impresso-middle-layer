{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Base find response",
  "additionalProperties": false,
  "required": ["data", "limit", "skip", "total", "info"],
  "properties": {
    "data": {
      "type": "array"
    },
    "limit": {
      "type": "integer",
      "description": "The number of items returned in this response"
    },
    "skip": {
      "type": "integer",
      "description": "The number of items skipped in this response"
    },
    "total": {
      "type": "integer",
      "description": "The total number of items matching the query"
    },
    "info": {
      "type": "object",
      "description": "Additional information about the response.",
      "properties": {}
    }
  }
}
