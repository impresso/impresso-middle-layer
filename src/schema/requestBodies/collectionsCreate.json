{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "New Collection",
  "type": "object",
  "additionalProperties": false,
  "required": ["name"],
  "properties": {
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "minLength": 2,
      "maxLength": 50
    },
    "description": {
      "$id": "#/properties/description",
      "type": "string",
      "maxlength": 500
    },
    "status": {
      "$id": "#/properties/status",
      "type": "string",
      "minLength": 2,
      "maxLength": 3,
      "title": "Status of the collection",
      "examples": ["PRI", "DEL"]
    }
  }
}
