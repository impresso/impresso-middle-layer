    "community": {
      "type": "string",
      "description": "TODO"
    },
    "pagerank": {
      "type": "number",
      "description": "TODO"
    },
    "degree": {
      "type": "number",
      "description": "TODO"
    },
    "x": {
      "type": "number",
      "description": "TODO"
    },
    "y": {
      "type": "number",
      "description": "TODO"
    },
    "relatedTopics": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
