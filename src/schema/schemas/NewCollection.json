{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "New Collection",
  "description": "Create new collection request",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 50
    },
    "description": {
      "type": "string",
      "maxLength": 500
    },
    "status": {
      "type": "string",
      "minLength": 2,
      "maxLength": 3,
      "title": "Status of the collection",
      "examples": ["PRI", "PUB"]
    }
  },
  "required": ["name"]
}
