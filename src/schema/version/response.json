{
  "$id": "https://github.com/impresso/impresso-middle-layer/tree/master/src/schema/version/response.json",
  "type": "object",
  "title": "API Version",
  "description": "Version of the API. Contains information about the current version of the API, features, etc.",
  "additionalProperties": false,
  "required": ["solr", "mysql", "version", "apiVersion", "documentsDateSpan", "newspapers", "features"],
  "properties": {
    "solr": {
      "type": "object",
      "properties": {
        "endpoints": {
          "type": "object",
          "patternProperties": {
            "^.*": { "type": "string" }
          }
        }
      }
    },
    "mysql": {
      "type": "object",
      "properties": {
        "endpoint": {
          "type": "string"
        }
      }
    },
    "version": {
      "type": "string"
    },
    "apiVersion": {
      "type": "object",
      "properties": {
        "branch": { "type": "string" },
        "revision": { "type": "string" },
        "version": { "type": "string" }
      }
    },
    "documentsDateSpan": {
      "type": "object",
      "properties": {
        "start": { "firstDate": "string", "format": "date-time" },
        "end": { "lastDate": "string", "format": "date-time" }
      }
    },
    "newspapers": {
      "type": "object",
      "patternProperties": {
        "^.*": {
          "type": "object",
          "properties": {
            "name": { "type": "string" }
          }
        }
      }
    },
    "features": {
      "type": "object",
      "patternProperties": {
        "^.*": {
          "type": "object"
        }
      }
    }
  }
}
