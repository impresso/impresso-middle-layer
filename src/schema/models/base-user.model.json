{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/impresso/impresso-middle-layer/tree/master/src/schema/models/base-user.model.json",
  "type": "object",
  "title": "Base User Details",
  "required": ["uid", "username"],
  "properties": {
    "uid": {
      "$id": "#/properties/uid",
      "type": "string",
      "title": "unique identifier for the user",
      "default": "",
      "examples": ["local-dg"],
      "pattern": "^([a-zA-Z-]+)$"
    },
    "username": {
      "$id": "#/properties/username",
      "type": "string",
      "title": "unique username for the user for other humans",
      "default": "",
      "examples": ["daniele.guido"],
      "pattern": "^([a-z.]+)$"
    }
  }
}
