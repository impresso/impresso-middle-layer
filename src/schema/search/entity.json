{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/impresso/impresso-middle-layer/tree/master/src/schema/search/entity.json",
  "description": "An entity like location, person, etc",
  "type": "object",
  "title": "Entity",
  "additionalProperties": false,
  "properties": {
    "uid": {
      "type": "string",
      "description": "Unique identifier of the entity"
    },
    "relevance": {
      "type": "integer",
      "description": "Relevance of the entity in the document"
    }
  },
  "required": ["uid", "relevance"]
}