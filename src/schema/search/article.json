{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/impresso/impresso-middle-layer/tree/master/src/schema/search/article.json",
  "title": "Article",
  "description": "A journal/magazine article",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "uid": {
      "type": "string",
      "description": "The unique identifier of the article"
    },
    "type": {
      "type": "string",
      "description": "The type of the article. NOTE: may be empty."
    },
    "title": {
      "type": "string",
      "description": "The title of the article"
    },
    "size": {
      "type": "integer",
      "description": "The size of the article in characters"
    },
    "nbPages": {
      "type": "integer",
      "description": "The number of pages in this article"
    },
    "pages": {
      "type":"array",
      "items": {
        "$ref": "https://github.com/impresso/impresso-middle-layer/tree/master/src/schema/search/page.json"
      }
    },
    "isCC": {
      "type": "boolean",
      "description": "TODO"
    },
    "excerpt": {
      "type": "string",
      "description": "The excerpt of the article"
    },
    "locations": {
      "type": "array",
      "items": {
        "$ref": "https://github.com/impresso/impresso-middle-layer/tree/master/src/schema/search/entity.json"
      }
    },
    "persons": {
      "type": "array",
      "items": {
        "$ref": "https://github.com/impresso/impresso-middle-layer/tree/master/src/schema/search/entity.json"
      }
    }
  },
  "required": [
    "uid", "type", "title", "size", "nbPages", "pages", "isCC", "excerpt"
  ]
}