{
  "$schema": "https://json.schemastore.org/mocharc.json",
  "require": "tsx",
  "diff": true,
  "package": "./package.json",
  "reporter": "spec",
  "ui": "bdd",
  "exit": true,
  "recursive": true,
  "extension": ["ts", "js"],
  "watch-files": ["src/**/*.js", "test/**/*.js"],
  "ignore": ["node_modules"]
}
