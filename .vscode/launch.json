{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Bun run: API",
      "type": "bun",
      "request": "launch",
      "runtimeArgs": ["--inspect=9229", "--watch"],
      "program": "${workspaceFolder}/src/index.ts",
      "args": [
        "--env-file=.env"
      ],
      "env": {
        "HOST": "api"
      }
    },
    {
      "name": "Bun run: Internal API",
      "type": "bun",
      "request": "launch",
      "runtimeArgs": ["--inspect=9229", "--watch"],
      "program": "${workspaceFolder}/src/index.ts",
      "args": [
        "--env-file=.env"
      ]
    },
    {
      "name": "Start internal API",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "tsx",
      "args": [
        "--env-file=.env",
        "--watch",
        "src/index.ts"
      ]
    },
    {
      "name": "Attach",
      "type": "node",
      "request": "attach",
      "port": 9229
    }
  ]
}